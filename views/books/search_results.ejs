<!DOCTYPE html>
<html>
<head>
  <title>Search Results – Bertie's Books</title>
  <link rel="stylesheet" href="../styles.css">
</head>
<body>
<div class="container">
  <h1>Bertie’s Books</h1>

  <nav>
    <a href="../">Home</a>
    <a href="./list">All Books</a>
    <a href="./add">Add Book</a>
    <a href="./search">Search</a>
    <a href="../users/register">Register</a>
    <a href="../users/login">Login</a>
    <a href="../about">About</a>
    <a href="../logout">Logout</a>
  </nav>

  <div class="section">
    <h2>Results for "<%= term %>"</h2>

    <table class="table">
      <tr><th>ID</th><th>Title</th><th>Author</th><th>Year</th></tr>

      <% books.forEach(b => { %>
        <tr>
          <td><%= b.id %></td>
          <td><%= b.title %></td>
          <td><%= b.author %></td>
          <td><%= b.year %></td>
        </tr>
      <% }) %>
    </table>

    <div class="actions" style="margin-top:14px">
      <a class="btn" href="./search">New Search</a>
      <a class="btn btn-primary" href="./list">Back to List</a>
    </div>

  </div>
</div>
</body>
</html>
